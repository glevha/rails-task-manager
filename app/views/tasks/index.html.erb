<h2><%= link_to "Add a new task", new_task_path %></h2>

<% @tasks.each do |task| %>
	<h2><%= link_to task.name, task_path(task) %></h2>
	<p><%= task.description %></p>
	<p><%= link_to "Update task", edit_task_path(task) %></p>
	<p><%= link_to "Delete task", task_path(task), method: :delete %></p>

<% end %>